{
  "title": "RDP Bindings",
  "rules": [
    {
      "description": "Left Command A to Left Control A",
      "manipulators": [
        {
          "type": "basic",
          "from": {
              "key_code": "a",
              "modifiers": {
                  "mandatory": ["left_command"]
              }
          },
          "to": [
              {
                "key_code": "a",
                "modifiers": [
                  "left_control"
                ]
              } 
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.rdc$",
                "^com\\.microsoft\\.rdc\\.mac$",
                "^com\\.microsoft\\.rdc\\.osx\\.beta$"
              ]
            }
          ]
        }
      ]
    },
